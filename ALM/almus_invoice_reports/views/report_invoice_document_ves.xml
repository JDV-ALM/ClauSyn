<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Template completamente personalizado sin logo y en VES -->
    <template id="report_invoice_document_almus_ves">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.partner_id.lang"/>
                <!-- Obtener tasa de cambio para conversión a VES -->
                <!-- Si la factura ya está en VES, usar tasa 1.0 -->
                <!-- Si está en USD, obtener la tasa de cambio a VES -->
                <t t-if="o.currency_id.name == 'VES'">
                    <t t-set="exchange_rate" t-value="1.0"/>
                </t>
                <t t-else="">
                    <!-- Buscar la moneda VES -->
                    <t t-set="ves_currency" t-value="o.env['res.currency'].search([('name', '=', 'VES')], limit=1)"/>
                    <!-- Calcular tasa de cambio usando _convert -->
                    <t t-if="ves_currency">
                        <t t-set="exchange_rate" t-value="o.currency_id._convert(1.0, ves_currency, o.company_id, o.invoice_date or o.date or o.create_date.date())"/>
                    </t>
                    <t t-else="">
                        <!-- Si no encuentra VES, usar tasa por defecto -->
                        <t t-set="exchange_rate" t-value="36.5"/>
                    </t>
                </t>
                <t t-call="almus_invoice_reports.almus_invoice_layout_ves" t-lang="lang"/>
            </t>
        </t>
    </template>

    <!-- Layout personalizado de factura en VES sin logo -->
    <template id="almus_invoice_layout_ves">
        <div class="article" style="font-family: 'DejaVu Sans', Arial, sans-serif;">
            <style>
                .page {
                    padding: 0;
                    margin: 0;
                }
                .header-table {
                    width: 100%;
                    margin-bottom: 10px;
                }
                .invoice-table th {
                    background-color: #f0f0f0;
                    padding: 3px;
                    border: 1px solid #ddd;
                    font-size: 10px;
                }
                .invoice-table td {
                    padding: 2px 3px;
                    border: 1px solid #ddd;
                    font-size: 10px;
                    line-height: 1.2;
                }
                @page {
                    margin-top: 5mm;
                    margin-bottom: 5mm;
                    margin-left: 10mm;
                    margin-right: 10mm;
                }
            </style>
            
            <!-- Header con espacio reducido -->
            <table class="header-table">
                <tr>
                    <td style="width: 25%; vertical-align: top; padding: 0;">
                        <!-- Espacio vacío donde iría el logo -->
                        <div style="height: 50px; width: 150px;"></div>
                    </td>
                    <td style="width: 75%; text-align: right; vertical-align: top; padding: 0;">
                        <!-- Espacio vacío donde irían los datos de la empresa -->
                        <div style="height: 70px;"></div>
                    </td>
                </tr>
            </table>

            <!-- Título FACTURA -->
            <div style="text-align: center; margin: 5px 0;">
                <h3 style="font-weight: bold; margin: 0; font-size: 18px;">
                    FACTURA <t t-esc="o.name or ''"/>
                </h3>
            </div>

            <!-- Información del cliente y fechas en dos columnas -->
            <table style="width: 100%; margin-bottom: 10px;">
                <tr>
                    <td style="width: 60%; vertical-align: top; padding-right: 10px;">
                        <!-- Datos del Cliente -->
                        <h4 style="margin: 0; font-weight: bold; font-size: 12px;">
                            <t t-esc="o.partner_id.name"/>
                        </h4>
                        <div style="margin-top: 2px; font-size: 10px; line-height: 1.3;">
                            <t t-if="o.partner_id.street">
                                <t t-esc="o.partner_id.street"/><br/>
                            </t>
                            <t t-if="o.partner_id.street2">
                                <t t-esc="o.partner_id.street2"/><br/>
                            </t>
                            <t t-if="o.partner_id.city or o.partner_id.zip">
                                <t t-if="o.partner_id.city" t-esc="o.partner_id.city"/>
                                <t t-if="o.partner_id.zip"> <t t-esc="o.partner_id.zip"/></t><br/>
                            </t>
                            <t t-if="o.partner_id.state_id">
                                <t t-esc="o.partner_id.state_id.name"/>
                                <t t-if="o.partner_id.country_id">, <t t-esc="o.partner_id.country_id.name"/></t><br/>
                            </t>
                            <t t-if="o.partner_id.vat">
                                <strong>RIF:</strong> <t t-esc="o.partner_id.vat"/><br/>
                            </t>
                            <t t-if="o.partner_id.phone">
                                <strong>Tel:</strong> <t t-esc="o.partner_id.phone"/><br/>
                            </t>
                            <t t-if="o.invoice_user_id">
                                <strong>Vendedor:</strong> <t t-esc="o.invoice_user_id.name"/><br/>
                            </t>
                        </div>
                    </td>
                    <td style="width: 40%; vertical-align: top;">
                        <!-- Tabla de fechas compacta -->
                        <table style="width: 100%; font-size: 10px;">
                            <tr>
                                <th style="padding: 2px; text-align: left;">FECHA</th>
                                <th style="padding: 2px; text-align: left;">F. Vencimiento</th>
                                <th style="padding: 2px; text-align: left;">Origen</th>
                            </tr>
                            <tr>
                                <td style="padding: 2px;">
                                    <t t-esc="o.invoice_date and o.invoice_date.strftime('%d/%m/%Y') or ''"/>
                                </td>
                                <td style="padding: 2px;">
                                    <t t-esc="o.invoice_date_due and o.invoice_date_due.strftime('%d/%m/%Y') or ''"/>
                                </td>
                                <td style="padding: 2px;">
                                    <t t-esc="o.invoice_origin or ''"/>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>

            <!-- Tabla de productos con conversión a VES y espaciado reducido -->
            <table class="invoice-table" style="width: 100%; border-collapse: collapse;">
                <thead>
                    <tr>
                        <th style="text-align: left;">Descripción</th>
                        <th style="text-align: right; width: 60px;">Cant.</th>
                        <th style="text-align: right; width: 100px;">P. Unit.</th>
                        <th style="text-align: center; width: 40px;">IVA</th>
                        <th style="text-align: right; width: 100px;">Importe</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="o.invoice_line_ids" t-as="line">
                        <tr>
                            <td>
                                <t t-if="line.product_id.default_code">
                                    [<t t-esc="line.product_id.default_code"/>]
                                </t>
                                <t t-esc="line.name"/>
                            </td>
                            <td style="text-align: right;">
                                <t t-esc="'{:,.2f}'.format(line.quantity)"/>
                            </td>
                            <td style="text-align: right;">
                                <!-- Convertir precio unitario a VES -->
                                <t t-set="price_unit_ves" t-value="line.price_unit * exchange_rate"/>
                                Bs. <t t-esc="'{:,.2f}'.format(price_unit_ves)"/>
                            </td>
                            <td style="text-align: center;">
                                <!-- Siempre mostrar 16% -->
                                16%
                            </td>
                            <td style="text-align: right;">
                                <!-- Convertir subtotal a VES (sin IVA) -->
                                <t t-set="subtotal_ves" t-value="line.price_subtotal * exchange_rate"/>
                                Bs. <t t-esc="'{:,.2f}'.format(subtotal_ves)"/>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>

            <!-- Términos de pago -->
            <t t-if="o.invoice_payment_term_id">
                <p style="margin-top: 8px; margin-bottom: 5px; font-size: 10px;">
                    <strong>Términos de pago:</strong> <t t-esc="o.invoice_payment_term_id.name"/>
                </p>
            </t>

            <!-- Totales convertidos a VES con IVA forzado al 16% -->
            <table style="width: 100%; margin-top: 10px;">
                <tr>
                    <td style="width: 60%;"></td>
                    <td style="width: 40%;">
                        <table style="width: 100%; font-size: 10px;">
                            <tr>
                                <td style="text-align: right; padding: 2px;"><strong>Subtotal</strong></td>
                                <td style="text-align: right; padding: 2px; width: 100px;">
                                    <t t-set="subtotal_ves" t-value="o.amount_untaxed * exchange_rate"/>
                                    Bs. <t t-esc="'{:,.2f}'.format(subtotal_ves)"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align: right; padding: 2px;"><strong>IVA (16%)</strong></td>
                                <td style="text-align: right; padding: 2px;">
                                    <!-- Calcular IVA siempre al 16% del subtotal -->
                                    <t t-set="iva_ves" t-value="(o.amount_untaxed * exchange_rate) * 0.16"/>
                                    Bs. <t t-esc="'{:,.2f}'.format(iva_ves)"/>
                                </td>
                            </tr>
                            <tr style="border-top: 2px solid #000;">
                                <td style="text-align: right; padding: 3px;"><strong>Total</strong></td>
                                <td style="text-align: right; padding: 3px;">
                                    <!-- Total = Subtotal + IVA 16% -->
                                    <t t-set="total_ves" t-value="(o.amount_untaxed * exchange_rate) * 1.16"/>
                                    <strong>Bs. <t t-esc="'{:,.2f}'.format(total_ves)"/></strong>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </div>
    </template>
</odoo>