<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_tesote" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.tesote</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='account']" position="inside">
                <block title="Tesote Integration" name="tesote_integration">
                    <setting help="Configure Tesote API integration for automatic bank statement import">
                        <field name="tesote_api_key" password="True" placeholder="Enter your Tesote API Bearer Token"/>
                        <div class="mt-2">
                            <button name="action_tesote_test_connection" 
                                    type="object" 
                                    string="Test Connection" 
                                    class="btn-secondary"
                                    icon="oi-check"/>
                            <button name="action_tesote_fetch_accounts" 
                                    type="object" 
                                    string="Fetch Accounts" 
                                    class="btn-secondary ms-2"
                                    icon="oi-download"/>
                        </div>
                    </setting>
                    
                    <setting help="Enable automatic synchronization via scheduled actions">
                        <field name="tesote_auto_sync"/>
                        <div invisible="not tesote_auto_sync" class="content-group">
                            <div class="mt-2">
                                <label for="tesote_sync_days" string="Days to sync"/>
                                <field name="tesote_sync_days" class="oe_inline"/> days
                            </div>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>