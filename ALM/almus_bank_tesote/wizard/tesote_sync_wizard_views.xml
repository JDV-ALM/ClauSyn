<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sync Wizard Form View -->
    <record id="view_tesote_sync_wizard_form" model="ir.ui.view">
        <field name="name">tesote.sync.wizard.form</field>
        <field name="model">tesote.sync.wizard</field>
        <field name="arch" type="xml">
            <form string="Sync from Tesote">
                <sheet>
                    <group>
                        <group string="Journals to Sync">
                            <field name="journal_ids" widget="many2many_tags">
                                <list>
                                    <field name="name"/>
                                    <field name="tesote_account_id"/>
                                </list>
                            </field>
                        </group>
                        <group string="Date Range">
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_sync" 
                            type="object" 
                            string="Synchronize" 
                            class="btn-primary"
                            data-hotkey="z"/>
                    <button string="Cancel" 
                            class="btn-secondary" 
                            special="cancel"
                            data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Sync Wizard Action -->
    <record id="action_tesote_sync_wizard_menu" model="ir.actions.act_window">
        <field name="name">Sync Bank Statements from Tesote</field>
        <field name="res_model">tesote.sync.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure Tesote Integration
            </p>
            <p>
                First, go to Settings → Accounting → Tesote Integration to configure your API key.
                Then fetch available accounts and link them to your bank journals.
            </p>
        </field>
    </record>
    
    <!-- Menu Item - Place under Accounting Configuration -->
    <menuitem id="menu_tesote_sync"
              name="Sync from Tesote"
              parent="account.menu_finance_configuration"
              action="action_tesote_sync_wizard_menu"
              sequence="50"
              groups="account.group_account_user"/>
</odoo>