<?xml version="1.0" encoding="UTF-8" ?>
<templates>

     <t t-name="account_reports.AgedPartnerBalanceFilterExtraOptions" t-inherit="account_reports.AgedPartnerBalanceFilterExtraOptions" t-inherit-mode="extension">
        <xpath expr="//DropdownItem[contains(@class, 'filter_show_all_hook')]" position="after">
             <t t-call="wm_ar_salesperson_filter.AccountReportGroupBySalesperson"/>
        </xpath>
    </t>

     <!-- Aged Receivable Salesperson Filter -->
    <t t-name="account_reports.AgedPartnerBalanceFilters"
       t-inherit="account_reports.AgedPartnerBalanceFilters" t-inherit-mode="extension">
        <xpath expr="//t[@t-if='hasExtraOptionsFilter']" position="inside">
            <t t-if="'salesperson' in controller.options">
                <div id="filter_salesperson" class="filter_salesperson">
                    <t t-call="wm_ar_salesperson_filter.AccountReportFilterSalesperson"/>
                </div>
            </t>
        </xpath>
    </t>

</templates>
