<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Form heredada -->
    <record id="view_partner_form_commission" model="ir.ui.view">
        <field name="name">res.partner.form.commission</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="vat" position="after">
                <field name="is_commission_seller"
                    groups="commission_seller_base.group_commission_user,commission_seller_base.group_commission_manager"/>
                <field name="commission_seller_id"
                    groups="commission_seller_base.group_commission_user,commission_seller_base.group_commission_manager"
                    context="{'search_commission_seller': True}"
                    options="{'no_create': True, 'no_create_edit': True}"/>
            </field>
            
            <notebook position="inside">
                <page string="Información de Comisión" invisible="not is_commission_seller" groups="commission_seller_base.group_commission_user">
                    <group>
                        <group string="Estadísticas">
                            <field name="commission_sale_ids" widget="many2many_tags" readonly="1"/>
                            <field name="commission_invoice_ids" widget="many2many_tags" readonly="1"/>
                            <field name="commission_payment_ids" widget="many2many_tags" readonly="1"/>
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
    
    <!-- Vista List para vendedores -->
    <record id="view_commission_seller_tree" model="ir.ui.view">
        <field name="name">commission.seller.tree</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <list string="Vendedores">
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="city"/>
                <field name="country_id"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>
    
    <!-- Acción para vendedores -->
    <record id="action_commission_seller" model="ir.actions.act_window">
        <field name="name">Vendedores</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('is_commission_seller', '=', True)]</field>
        <field name="context">{'default_is_commission_seller': True, 'search_commission_seller': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cree su primer vendedor
            </p>
            <p>
                Gestione los vendedores que recibirán comisiones de ventas, facturas y pagos.
            </p>
        </field>
    </record>
</odoo>