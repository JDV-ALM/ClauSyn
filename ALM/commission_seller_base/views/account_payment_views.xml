<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_form_commission" model="ir.ui.view">
        <field name="name">account.payment.form.commission</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="commission_seller_id"
                       context="{'search_commission_seller': True}"
                       readonly="state != 'draft'"/>
            </field>
        </field>
    </record>
    
    <record id="view_account_payment_tree_commission" model="ir.ui.view">
        <field name="name">account.payment.list.commission</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="commission_seller_id" optional="hide"/>
            </field>
        </field>
    </record>
    
    <record id="view_account_payment_search_commission" model="ir.ui.view">
        <field name="name">account.payment.search.commission</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_search"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="commission_seller_id"/>
            </field>
        </field>
    </record>
</odoo>