<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Categoría de seguridad -->
    <record id="module_category_account_crossing" model="ir.module.category">
        <field name="name">Cruces Contables</field>
        <field name="description">Gestión de cruces contables</field>
        <field name="sequence">100</field>
    </record>

    <!-- Grupos de seguridad -->
    <record id="group_account_crossing_user" model="res.groups">
        <field name="name">Usuario</field>
        <field name="category_id" ref="module_category_account_crossing"/>
        <field name="implied_ids" eval="[(4, ref('account.group_account_invoice'))]"/>
    </record>

    <record id="group_account_crossing_manager" model="res.groups">
        <field name="name">Administrador</field>
        <field name="category_id" ref="module_category_account_crossing"/>
        <field name="implied_ids" eval="[(4, ref('group_account_crossing_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <!-- Reglas de registro multi-empresa -->
    <record id="account_crossing_reason_company_rule" model="ir.rule">
        <field name="name">Motivos de Cruce - Multi-Empresa</field>
        <field name="model_id" ref="model_account_crossing_reason"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_account_crossing_user'))]"/>
    </record>

    <record id="account_crossing_company_rule" model="ir.rule">
        <field name="name">Cruces Contables - Multi-Empresa</field>
        <field name="model_id" ref="model_account_crossing"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_account_crossing_user'))]"/>
    </record>

    <!-- Regla para ver solo cruces propios (usuarios normales) -->
    <record id="account_crossing_user_rule" model="ir.rule">
        <field name="name">Cruces Contables - Propios</field>
        <field name="model_id" ref="model_account_crossing"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_account_crossing_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Regla para managers - ver todos -->
    <record id="account_crossing_manager_rule" model="ir.rule">
        <field name="name">Cruces Contables - Todos</field>
        <field name="model_id" ref="model_account_crossing"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_account_crossing_manager'))]"/>
    </record>
</odoo>