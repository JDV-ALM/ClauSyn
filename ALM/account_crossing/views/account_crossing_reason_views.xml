<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="account_crossing_reason_list_view" model="ir.ui.view">
        <field name="name">account.crossing.reason.list</field>
        <field name="model">account.crossing.reason</field>
        <field name="arch" type="xml">
            <list string="Motivos de Cruce">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="account_id"/>
                <field name="journal_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="account_crossing_reason_form_view" model="ir.ui.view">
        <field name="name">account.crossing.reason.form</field>
        <field name="model">account.crossing.reason</field>
        <field name="arch" type="xml">
            <form string="Motivo de Cruce">
                <sheet>
                    <widget name="web_ribbon" title="Archivado" invisible="active"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="sequence"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="journal_id"
                                   domain="[('company_id', '=', company_id), ('type', '=', 'general')]"
                                   options="{'no_create': True}"/>
                            <field name="account_id"
                                   domain="[('account_type', 'not in', ['asset_receivable', 'liability_payable'])]"
                                   options="{'no_create': True}"/>
                            <field name="counterpart_partner_id"
                                   options="{'no_create': True}"/>
                            <field name="invert_balance_sign"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Descripción detallada del motivo de cruce..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_account_crossing_reason" model="ir.actions.act_window">
        <field name="name">Motivos de Cruce</field>
        <field name="res_model">account.crossing.reason</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un nuevo motivo de cruce
            </p>
            <p>
                Los motivos de cruce permiten configurar las cuentas y diarios
                que se utilizarán para realizar cruces contables en las facturas.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_account_crossing_config"
              name="Cruces Contables"
              parent="account.menu_finance_configuration"
              sequence="50"/>
              
    <menuitem id="menu_account_crossing_reason"
              name="Motivos de Cruce"
              parent="menu_account_crossing_config"
              action="action_account_crossing_reason"
              sequence="10"/>
</odoo>