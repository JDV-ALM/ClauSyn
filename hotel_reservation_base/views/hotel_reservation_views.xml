<odoo>
    
    <!-- Form View de Reserva con campo de pagos actualizado -->
    <record id="view_hotel_reservation_form" model="ir.ui.view">
        <field name="name">hotel.reservation.form</field>
        <field name="model">hotel.reservation</field>
        <field name="arch" type="xml">
            <form string="Reserva de Hotel">
                <header>
                    <button name="action_confirm"
                            string="Confirmar"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_check_in"
                            string="Check-in"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'confirmed'"/>
                    <button name="action_check_out"
                            string="Check-out"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'checked_in'"/>
                    <button name="action_cancel"
                            string="Cancelar"
                            type="object"
                            invisible="state in ['done', 'cancelled']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,checked_in,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_pos_orders"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-shopping-cart"
                                invisible="pos_order_count == 0">
                            <field name="pos_order_count" widget="statinfo" string="Órdenes POS"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" options="{'no_create': True}"/>
                            <field name="room_number"/>
                            <field name="checkin_date"/>
                            <field name="checkout_date"/>
                        </group>
                        <group>
                            <field name="adults"/>
                            <field name="children"/>
                            <field name="pricelist_id" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Consumos POS" name="pos_orders">
                            <field name="pos_order_ids" readonly="1">
                                <tree create="false" delete="false">
                                    <field name="name"/>
                                    <field name="date_order"/>
                                    <field name="partner_id"/>
                                    <field name="amount_total" sum="Total"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Cargos Manuales" name="manual_charges">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="product_id" options="{'no_create': True}"/>
                                    <field name="name"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="price_subtotal" sum="Total"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Anticipos" name="payments">
                            <button name="%(action_hotel_payment_wizard)d"
                                    string="Registrar Anticipo"
                                    type="action"
                                    class="btn-primary mb-2"
                                    context="{'default_reservation_id': id, 'default_partner_id': partner_id}"
                                    invisible="state not in ['confirmed', 'checked_in']"/>
                            <field name="payment_ids">
                                <tree create="false" delete="true">
                                    <field name="payment_date"/>
                                    <field name="name"/>
                                    <field name="journal_id" optional="show"/>
                                    <field name="amount" widget="monetary" string="Monto Original"/>
                                    <field name="currency_id" column_invisible="1"/>
                                    <field name="alternative_currency_id" column_invisible="1"/>
                                    <field name="amount_alt"
                                           widget="monetary"
                                           string="Monto (Mon. Alt)"
                                           sum="Total en Moneda Alternativa"
                                           optional="show"
                                           invisible="not alternative_currency_id"/>
                                    <field name="exchange_rate_at_payment"
                                           string="Tasa Cambio"
                                           optional="hide"
                                           invisible="not alternative_currency_id"/>
                                    <field name="reference" optional="show"/>
                                    <field name="account_move_id" optional="hide"/>
                                    <field name="is_applied" widget="boolean_toggle" readonly="1"/>
                                    <button name="action_view_account_move"
                                            type="object"
                                            icon="fa-external-link"
                                            string="Ver Asiento"
                                            invisible="not account_move_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notas" name="notes">
                            <field name="notes" placeholder="Agregue cualquier nota o instrucción especial aquí..."/>
                        </page>
                    </notebook>
                    <group class="oe_subtotal_footer oe_right">
                        <field name="currency_id" invisible="1"/>
                        <field name="alternative_currency_id" invisible="1"/>

                        <!-- Totales en Moneda Alternativa (Principal) -->
                        <div invisible="not alternative_currency_id" style="font-size: 14px; font-weight: bold;">
                            <label for="amount_total_alt" string="TOTAL (DEUDA)"/>
                        </div>
                        <field name="amount_total_alt"
                               nolabel="1"
                               widget="monetary"
                               options="{'currency_field': 'alternative_currency_id'}"
                               invisible="not alternative_currency_id"
                               style="font-size: 16px; font-weight: bold;"/>

                        <div invisible="not alternative_currency_id" style="font-size: 14px; font-weight: bold; margin-top: 8px;">
                            <label for="balance_alt" string="SALDO PENDIENTE"/>
                        </div>
                        <field name="balance_alt"
                               nolabel="1"
                               widget="monetary"
                               options="{'currency_field': 'alternative_currency_id'}"
                               invisible="not alternative_currency_id"
                               style="font-size: 18px; font-weight: bold; color: #875A7B;"/>

                        <!-- Separador visual -->
                        <div invisible="not alternative_currency_id" style="margin-top: 16px; border-top: 1px solid #ddd; padding-top: 8px;">
                            <i>Desglose en moneda de reserva:</i>
                        </div>

                        <!-- Totales en Moneda de Reserva (Secundario/Desglose) -->
                        <field name="charges_subtotal"
                               widget="monetary"
                               options="{'currency_field': 'currency_id'}"
                               string="Cargos Manuales"/>
                        <field name="pos_charges_subtotal"
                               widget="monetary"
                               options="{'currency_field': 'currency_id'}"
                               string="Consumos POS"/>
                        <div class="oe_subtotal_footer_separator oe_inline">
                            <label for="amount_total"/>
                        </div>
                        <field name="amount_total"
                               nolabel="1"
                               widget="monetary"
                               options="{'currency_field': 'currency_id'}"/>
                        <field name="total_paid"
                               widget="monetary"
                               options="{'currency_field': 'currency_id'}"/>
                        <div class="oe_subtotal_footer_separator oe_inline">
                            <label for="balance"/>
                        </div>
                        <field name="balance"
                               nolabel="1"
                               widget="monetary"
                               options="{'currency_field': 'currency_id'}"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Tree View de Reservas -->
    <record id="view_hotel_reservation_tree" model="ir.ui.view">
        <field name="name">hotel.reservation.tree</field>
        <field name="model">hotel.reservation</field>
        <field name="arch" type="xml">
            <tree string="Reservas">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="room_number"/>
                <field name="checkin_date"/>
                <field name="checkout_date"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="alternative_currency_id" column_invisible="1"/>
                <field name="amount_total_alt"
                       widget="monetary"
                       string="Total (Mon. Alt)"
                       sum="Total"
                       optional="show"
                       invisible="not alternative_currency_id"/>
                <field name="balance_alt"
                       widget="monetary"
                       string="Saldo (Mon. Alt)"
                       sum="Saldo Total"
                       optional="show"
                       invisible="not alternative_currency_id"/>
                <field name="amount_total"
                       widget="monetary"
                       string="Total"
                       sum="Total"
                       optional="hide"/>
                <field name="balance"
                       widget="monetary"
                       string="Saldo"
                       sum="Saldo Total"
                       optional="hide"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'done'"
                       decoration-warning="state == 'checked_in'"
                       decoration-info="state == 'confirmed'"
                       decoration-muted="state == 'cancelled'"/>
            </tree>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="view_hotel_reservation_search" model="ir.ui.view">
        <field name="name">hotel.reservation.search</field>
        <field name="model">hotel.reservation</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="room_number"/>
                <separator/>
                <filter string="En Casa" name="checked_in" domain="[('state', '=', 'checked_in')]"/>
                <filter string="Confirmadas" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Check-in Hoy" name="checkin_today"
                        domain="[('checkin_date', '&gt;=', context_today().strftime('%Y-%m-%d 00:00:00')),
                                 ('checkin_date', '&lt;=', context_today().strftime('%Y-%m-%d 23:59:59'))]"/>
                <filter string="Check-out Hoy" name="checkout_today"
                        domain="[('checkout_date', '&gt;=', context_today().strftime('%Y-%m-%d 00:00:00')),
                                 ('checkout_date', '&lt;=', context_today().strftime('%Y-%m-%d 23:59:59'))]"/>
                <separator/>
                <filter string="Con Saldo" name="with_balance" domain="[('balance', '>', 0)]"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Cliente" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Habitación" name="group_room" context="{'group_by': 'room_number'}"/>
                    <filter string="Estado" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Fecha Check-in" name="group_checkin" context="{'group_by': 'checkin_date:day'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Calendar View -->
    <record id="view_hotel_reservation_calendar" model="ir.ui.view">
        <field name="name">hotel.reservation.calendar</field>
        <field name="model">hotel.reservation</field>
        <field name="arch" type="xml">
            <calendar string="Reservas" date_start="checkin_date" date_stop="checkout_date" color="room_number">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="room_number"/>
            </calendar>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_hotel_reservation" model="ir.actions.act_window">
        <field name="name">Reservas</field>
        <field name="res_model">hotel.reservation</field>
        <field name="view_mode">tree,form,calendar</field>
        <field name="search_view_id" ref="view_hotel_reservation_search"/>
        <field name="context">{'search_default_checked_in': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cree su primera reserva
            </p>
            <p>
                Gestione las reservas de habitaciones, check-in, check-out y cargos asociados.
            </p>
        </field>
    </record>

</odoo>