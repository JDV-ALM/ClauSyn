<odoo>
    
    <!-- Form View de Reserva con campo de pagos actualizado -->
    <record id="view_hotel_reservation_form" model="ir.ui.view">
        <field name="name">hotel.reservation.form</field>
        <field name="model">hotel.reservation</field>
        <field name="arch" type="xml">
            <form string="Reserva de Hotel">
                <header>
                    <button name="action_confirm" 
                            string="Confirmar" 
                            type="object" 
                            class="btn-primary"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_check_in" 
                            string="Check-in" 
                            type="object" 
                            class="btn-primary"
                            attrs="{'invisible': [('state', '!=', 'confirmed')]}"/>
                    <button name="action_check_out" 
                            string="Check-out" 
                            type="object" 
                            class="btn-primary"
                            attrs="{'invisible': [('state', '!=', 'checked_in')]}"/>
                    <button name="action_cancel" 
                            string="Cancelar" 
                            type="object"
                            attrs="{'invisible': [('state', 'in', ['done', 'cancelled'])]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,checked_in,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_pos_orders" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-shopping-cart"
                                attrs="{'invisible': [('pos_order_count', '=', 0)]}">
                            <field name="pos_order_count" widget="statinfo" string="Órdenes POS"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" options="{'no_create': True}"/>
                            <field name="room_id" options="{'no_create': True}"/>
                            <field name="room_number"/>
                            <field name="room_type_id"/>
                        </group>
                        <group>
                            <field name="checkin_date"/>
                            <field name="checkout_date"/>
                            <field name="adults"/>
                            <field name="children"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Consumos POS" name="pos_orders">
                            <field name="pos_order_ids" readonly="1">
                                <tree create="false" delete="false">
                                    <field name="name"/>
                                    <field name="date_order"/>
                                    <field name="partner_id"/>
                                    <field name="amount_total" sum="Total"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Cargos Manuales" name="manual_charges">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="product_id" options="{'no_create': True}"/>
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="subtotal" sum="Total"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Anticipos" name="payments">
                            <button name="%(action_hotel_payment_wizard)d" 
                                    string="Registrar Anticipo" 
                                    type="action" 
                                    class="btn-primary mb-2"
                                    context="{'default_reservation_id': active_id, 'default_partner_id': partner_id}"
                                    attrs="{'invisible': [('state', 'not in', ['confirmed', 'checked_in'])]}"/>
                            <field name="payment_ids">
                                <tree create="false" delete="true">
                                    <field name="payment_date"/>
                                    <field name="name"/>
                                    <field name="amount" sum="Total Anticipos"/>
                                    <field name="currency_id" column_invisible="1"/>
                                    <field name="amount_reservation_currency" 
                                           widget="monetary" 
                                           sum="Total en Moneda Reserva"
                                           optional="show"/>
                                    <field name="reservation_currency_id" column_invisible="1"/>
                                    <field name="payment_method_id"/>
                                    <field name="reference" optional="show"/>
                                    <field name="account_payment_id" optional="hide"/>
                                    <field name="is_applied" widget="boolean_toggle" readonly="1"/>
                                    <button name="action_view_account_payment" 
                                            type="object" 
                                            icon="fa-external-link" 
                                            string="Ver Pago"
                                            attrs="{'invisible': [('account_payment_id', '=', False)]}"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notas" name="notes">
                            <field name="notes" placeholder="Agregue cualquier nota o instrucción especial aquí..."/>
                        </page>
                    </notebook>
                    <group class="oe_subtotal_footer oe_right">
                        <field name="currency_id" invisible="1"/>
                        <field name="room_subtotal" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="charges_subtotal" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="pos_charges_subtotal" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <div class="oe_subtotal_footer_separator oe_inline">
                            <label for="amount_total"/>
                        </div>
                        <field name="amount_total" nolabel="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="total_paid" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <div class="oe_subtotal_footer_separator oe_inline">
                            <label for="balance"/>
                        </div>
                        <field name="balance" nolabel="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Tree View de Reservas -->
    <record id="view_hotel_reservation_tree" model="ir.ui.view">
        <field name="name">hotel.reservation.tree</field>
        <field name="model">hotel.reservation</field>
        <field name="arch" type="xml">
            <tree string="Reservas">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="room_number"/>
                <field name="checkin_date"/>
                <field name="checkout_date"/>
                <field name="amount_total" widget="monetary" sum="Total"/>
                <field name="balance" widget="monetary" sum="Saldo Total"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="state" widget="badge" 
                       decoration-success="state == 'done'"
                       decoration-warning="state == 'checked_in'"
                       decoration-info="state == 'confirmed'"
                       decoration-muted="state == 'cancelled'"/>
            </tree>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="view_hotel_reservation_search" model="ir.ui.view">
        <field name="name">hotel.reservation.search</field>
        <field name="model">hotel.reservation</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="room_number"/>
                <field name="room_id"/>
                <separator/>
                <filter string="En Casa" name="checked_in" domain="[('state', '=', 'checked_in')]"/>
                <filter string="Confirmadas" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Check-in Hoy" name="checkin_today" 
                        domain="[('checkin_date', '&gt;=', context_today().strftime('%Y-%m-%d 00:00:00')), 
                                 ('checkin_date', '&lt;=', context_today().strftime('%Y-%m-%d 23:59:59'))]"/>
                <filter string="Check-out Hoy" name="checkout_today" 
                        domain="[('checkout_date', '&gt;=', context_today().strftime('%Y-%m-%d 00:00:00')), 
                                 ('checkout_date', '&lt;=', context_today().strftime('%Y-%m-%d 23:59:59'))]"/>
                <separator/>
                <filter string="Con Saldo" name="with_balance" domain="[('balance', '>', 0)]"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Cliente" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Habitación" name="group_room" context="{'group_by': 'room_id'}"/>
                    <filter string="Estado" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Fecha Check-in" name="group_checkin" context="{'group_by': 'checkin_date:day'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Calendar View -->
    <record id="view_hotel_reservation_calendar" model="ir.ui.view">
        <field name="name">hotel.reservation.calendar</field>
        <field name="model">hotel.reservation</field>
        <field name="arch" type="xml">
            <calendar string="Reservas" date_start="checkin_date" date_stop="checkout_date" color="room_id">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="room_number"/>
            </calendar>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_hotel_reservation" model="ir.actions.act_window">
        <field name="name">Reservas</field>
        <field name="res_model">hotel.reservation</field>
        <field name="view_mode">tree,form,calendar</field>
        <field name="search_view_id" ref="view_hotel_reservation_search"/>
        <field name="context">{'search_default_checked_in': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cree su primera reserva
            </p>
            <p>
                Gestione las reservas de habitaciones, check-in, check-out y cargos asociados.
            </p>
        </field>
    </record>
    
    <!-- Menús -->
    <menuitem id="menu_hotel_root" 
              name="Hotel" 
              sequence="55"
              web_icon="hotel_reservation_base,static/description/icon.png"/>
    
    <menuitem id="menu_hotel_reservation" 
              name="Reservas" 
              parent="menu_hotel_root" 
              sequence="1"/>
    
    <menuitem id="menu_hotel_reservation_all" 
              name="Todas las Reservas" 
              parent="menu_hotel_reservation" 
              action="action_hotel_reservation" 
              sequence="1"/>
    
    <!-- Action para Check-in Hoy -->
    <record id="action_hotel_reservation_checkin_today" model="ir.actions.act_window">
        <field name="name">Check-in Hoy</field>
        <field name="res_model">hotel.reservation</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_hotel_reservation_search"/>
        <field name="domain">[('checkin_date', '&gt;=', context_today().strftime('%Y-%m-%d 00:00:00')), 
                               ('checkin_date', '&lt;=', context_today().strftime('%Y-%m-%d 23:59:59'))]</field>
        <field name="context">{'search_default_confirmed': 1}</field>
    </record>
    
    <menuitem id="menu_hotel_reservation_checkin_today" 
              name="Check-in Hoy" 
              parent="menu_hotel_reservation" 
              action="action_hotel_reservation_checkin_today" 
              sequence="2"/>
    
    <!-- Action para Check-out Hoy -->
    <record id="action_hotel_reservation_checkout_today" model="ir.actions.act_window">
        <field name="name">Check-out Hoy</field>
        <field name="res_model">hotel.reservation</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_hotel_reservation_search"/>
        <field name="domain">[('checkout_date', '&gt;=', context_today().strftime('%Y-%m-%d 00:00:00')), 
                               ('checkout_date', '&lt;=', context_today().strftime('%Y-%m-%d 23:59:59'))]</field>
        <field name="context">{'search_default_checked_in': 1}</field>
    </record>
    
    <menuitem id="menu_hotel_reservation_checkout_today" 
              name="Check-out Hoy" 
              parent="menu_hotel_reservation" 
              action="action_hotel_reservation_checkout_today" 
              sequence="3"/>
    
    <!-- Action para En Casa -->
    <record id="action_hotel_reservation_in_house" model="ir.actions.act_window">
        <field name="name">En Casa</field>
        <field name="res_model">hotel.reservation</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_hotel_reservation_search"/>
        <field name="domain">[('state', '=', 'checked_in')]</field>
    </record>
    
    <menuitem id="menu_hotel_reservation_in_house" 
              name="En Casa" 
              parent="menu_hotel_reservation" 
              action="action_hotel_reservation_in_house" 
              sequence="4"/>
    
</odoo>