<odoo>
    
    <!-- Tree View de Pagos -->
    <record id="hotel_reservation_payment_tree_view" model="ir.ui.view">
        <field name="name">hotel.reservation.payment.tree</field>
        <field name="model">hotel.reservation.payment</field>
        <field name="arch" type="xml">
            <tree string="Anticipos" create="false">
                <field name="payment_date"/>
                <field name="name"/>
                <field name="partner_id" optional="show"/>
                <field name="room_number" optional="show"/>
                <field name="amount" widget="monetary" sum="Total Anticipos" string="Monto Original"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="alternative_currency_id" column_invisible="1"/>
                <field name="amount_alt"
                       widget="monetary"
                       string="Monto (Mon. Alt)"
                       sum="Total en Moneda Alternativa"
                       optional="show"
                       invisible="not alternative_currency_id"/>
                <field name="exchange_rate_at_payment"
                       string="Tasa Cambio"
                       optional="hide"
                       invisible="not alternative_currency_id"/>
                <field name="journal_id" optional="show"/>
                <field name="reference" optional="show"/>
                <field name="state" optional="show" widget="badge" decoration-success="state == 'posted'" decoration-muted="state == 'cancel'"/>
                <field name="account_payment_id" optional="hide"/>
                <field name="is_applied" widget="boolean_toggle" readonly="1"/>
                <button name="action_view_account_payment"
                        type="object"
                        icon="fa-external-link"
                        string="Ver Pago"
                        invisible="not account_payment_id"/>
            </tree>
        </field>
    </record>
    
    <!-- Form View de Pagos -->
    <record id="hotel_reservation_payment_form_view" model="ir.ui.view">
        <field name="name">hotel.reservation.payment.form</field>
        <field name="model">hotel.reservation.payment</field>
        <field name="arch" type="xml">
            <form string="Anticipo">
                <header>
                    <button name="action_cancel"
                            string="Cancelar"
                            type="object"
                            class="btn-secondary"
                            invisible="state != 'posted'"
                            confirm="¿Está seguro que desea cancelar este anticipo? Esto cancelará el pago contable asociado."/>
                    <button name="action_apply_to_checkout"
                            string="Aplicar al Checkout"
                            type="object"
                            class="btn-primary"
                            invisible="is_applied or reservation_state not in ['checked_in']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,posted"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_account_payment"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-credit-card"
                                invisible="not account_payment_id">
                            <field name="account_payment_id" widget="statinfo" string="Pago Contable"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="reservation_id" readonly="1"/>
                            <field name="partner_id"/>
                            <field name="room_number"/>
                            <field name="reservation_state" invisible="1"/>
                        </group>
                        <group>
                            <field name="amount" widget="monetary" readonly="1" string="Monto Pagado"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="alternative_currency_id" invisible="1"/>
                            <field name="amount_alt"
                                   widget="monetary"
                                   readonly="1"
                                   invisible="not alternative_currency_id"
                                   string="Monto en Moneda Alternativa"
                                   style="font-weight: bold; color: #875A7B;"/>
                            <field name="exchange_rate_at_payment"
                                   readonly="1"
                                   invisible="not alternative_currency_id"
                                   string="Tasa de Cambio Aplicada"/>
                            <field name="payment_date" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="journal_id" readonly="1"/>
                            <field name="reference" readonly="1"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                            <field name="account_payment_id" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="hotel_reservation_payment_search_view" model="ir.ui.view">
        <field name="name">hotel.reservation.payment.search</field>
        <field name="model">hotel.reservation.payment</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="reservation_id"/>
                <field name="partner_id"/>
                <field name="room_number"/>
                <field name="reference"/>
                <field name="journal_id"/>
                <separator/>
                <filter string="Aplicados" name="applied" domain="[('is_applied', '=', True)]"/>
                <filter string="Pendientes" name="pending" domain="[('is_applied', '=', False)]"/>
                <separator/>
                <filter string="Hoy" name="today" domain="[('payment_date', '&gt;=', datetime.datetime.now().replace(hour=0, minute=0, second=0)), ('payment_date', '&lt;=', datetime.datetime.now().replace(hour=23, minute=59, second=59))]"/>
                <filter string="Esta Semana" name="this_week" domain="[('payment_date', '&gt;=', (datetime.datetime.now() - datetime.timedelta(days=datetime.datetime.now().weekday())).replace(hour=0, minute=0, second=0))]"/>
                <filter string="Este Mes" name="this_month" domain="[('payment_date', '&gt;=', datetime.datetime.now().replace(day=1, hour=0, minute=0, second=0))]"/>
                <separator/>
                <group expand="0" string="Agrupar por">
                    <filter string="Reserva" name="group_reservation" context="{'group_by': 'reservation_id'}"/>
                    <filter string="Cliente" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Diario" name="group_journal" context="{'group_by': 'journal_id'}"/>
                    <filter string="Fecha" name="group_date" context="{'group_by': 'payment_date:day'}"/>
                    <filter string="Estado" name="group_applied" context="{'group_by': 'is_applied'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_hotel_reservation_payment" model="ir.actions.act_window">
        <field name="name">Anticipos de Reservas</field>
        <field name="res_model">hotel.reservation.payment</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="hotel_reservation_payment_search_view"/>
        <field name="context">{'search_default_pending': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay anticipos registrados
            </p>
            <p>
                Los anticipos se registran desde las reservas confirmadas.
            </p>
        </field>
    </record>

</odoo>