<odoo>
    
    <!-- Form View -->
    <record id="view_hotel_reservation_payment_form" model="ir.ui.view">
        <field name="name">hotel.reservation.payment.form</field>
        <field name="model">hotel.reservation.payment</field>
        <field name="arch" type="xml">
            <form string="Anticipo de Reserva">
                <header>
                    <button name="action_view_account_move" 
                            string="Ver Asiento Contable" 
                            type="object" 
                            class="btn-secondary"
                            invisible="not account_move_id"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="reservation_id" readonly="1"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="room_number" readonly="1"/>
                            <field name="payment_date"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="amount" widget="monetary"/>
                            <field name="payment_method_id"/>
                            <field name="journal_id"/>
                            <field name="reference"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="account_move_id" readonly="1"/>
                            <field name="is_applied" readonly="1"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                            <field name="state" widget="badge"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Tree View -->
    <record id="view_hotel_reservation_payment_tree" model="ir.ui.view">
        <field name="name">hotel.reservation.payment.tree</field>
        <field name="model">hotel.reservation.payment</field>
        <field name="arch" type="xml">
            <tree string="Anticipos" create="false">
                <field name="payment_date"/>
                <field name="reservation_id"/>
                <field name="partner_id"/>
                <field name="room_number"/>
                <field name="name"/>
                <field name="payment_method_id"/>
                <field name="amount" sum="Total"/>
                <field name="reference" optional="show"/>
                <field name="journal_id" optional="hide"/>
                <field name="account_move_id" optional="show"/>
                <field name="is_applied" widget="boolean_toggle" readonly="1"/>
                <field name="state" widget="badge" optional="show"/>
                <field name="currency_id" column_invisible="1"/>
            </tree>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="view_hotel_reservation_payment_search" model="ir.ui.view">
        <field name="name">hotel.reservation.payment.search</field>
        <field name="model">hotel.reservation.payment</field>
        <field name="arch" type="xml">
            <search string="Buscar Anticipos">
                <field name="name"/>
                <field name="reservation_id"/>
                <field name="partner_id"/>
                <field name="room_number"/>
                <field name="reference"/>
                <separator/>
                <filter string="Hoy" name="today"
                        domain="[('payment_date', '>=', context_today().strftime('%Y-%m-%d 00:00:00')),
                                ('payment_date', '<=', context_today().strftime('%Y-%m-%d 23:59:59'))]"/>
                <filter string="Esta Semana" name="this_week"
                        domain="[('payment_date', '>=', (context_today() - relativedelta(days=context_today().weekday())).strftime('%Y-%m-%d')),
                                ('payment_date', '<=', (context_today() + relativedelta(days=6-context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <filter string="Este Mes" name="this_month"
                        domain="[('payment_date', '>=', context_today().strftime('%Y-%m-01')),
                                ('payment_date', '&lt;', (context_today() + relativedelta(months=1)).strftime('%Y-%m-01'))]"/>
                <separator/>
                <filter string="No Aplicados" name="not_applied"
                        domain="[('is_applied', '=', False)]"/>
                <filter string="Aplicados" name="applied"
                        domain="[('is_applied', '=', True)]"/>
                <separator/>
                <filter string="Con Asiento" name="with_move"
                        domain="[('account_move_id', '!=', False)]"/>
                <separator/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Reserva" name="group_reservation" 
                            domain="[]" context="{'group_by': 'reservation_id'}"/>
                    <filter string="Cliente" name="group_partner" 
                            domain="[]" context="{'group_by': 'partner_id'}"/>
                    <filter string="Habitación" name="group_room" 
                            domain="[]" context="{'group_by': 'room_number'}"/>
                    <filter string="Método de Pago" name="group_payment_method" 
                            domain="[]" context="{'group_by': 'payment_method_id'}"/>
                    <filter string="Fecha" name="group_date" 
                            domain="[]" context="{'group_by': 'payment_date:day'}"/>
                    <filter string="Estado" name="group_state" 
                            domain="[]" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Pivot View -->
    <record id="view_hotel_reservation_payment_pivot" model="ir.ui.view">
        <field name="name">hotel.reservation.payment.pivot</field>
        <field name="model">hotel.reservation.payment</field>
        <field name="arch" type="xml">
            <pivot string="Análisis de Anticipos">
                <field name="payment_date" type="row" interval="month"/>
                <field name="payment_method_id" type="col"/>
                <field name="amount" type="measure"/>
            </pivot>
        </field>
    </record>
    
    <!-- Graph View -->
    <record id="view_hotel_reservation_payment_graph" model="ir.ui.view">
        <field name="name">hotel.reservation.payment.graph</field>
        <field name="model">hotel.reservation.payment</field>
        <field name="arch" type="xml">
            <graph string="Anticipos" type="bar">
                <field name="payment_date" interval="day"/>
                <field name="amount" type="measure"/>
            </graph>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_hotel_reservation_payment" model="ir.actions.act_window">
        <field name="name">Anticipos de Reservas</field>
        <field name="res_model">hotel.reservation.payment</field>
        <field name="view_mode">tree,form,pivot,graph</field>
        <field name="search_view_id" ref="view_hotel_reservation_payment_search"/>
        <field name="context">{'search_default_not_applied': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay anticipos registrados
            </p>
            <p>
                Los anticipos se registran desde cada reserva.
            </p>
        </field>
    </record>
    
</odoo>