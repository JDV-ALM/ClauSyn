<odoo>
    
    <!-- Heredar vista de configuraci칩n general -->
    <record id="res_config_settings_view_form_inherit_hotel" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hotel</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="30"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="Hotel" string="Hotel" name="hotel_reservation_base">
                    <block title="Configuraci칩n Contable" name="hotel_accounting_setting">
                        <setting id="hotel_advance_account" string="Cuenta de Anticipos" help="Configure la cuenta contable donde se registrar치n los anticipos de reservas">
                            <div class="text-muted">
                                Define la cuenta de pasivo para registrar los anticipos recibidos de clientes antes de generar la factura
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="hotel_advance_account_id"
                                           options="{'no_create': True, 'no_open': True}"
                                           required="1"
                                           domain="[('account_type', 'in', ['liability_current', 'liability_non_current']), ('deprecated', '=', False), ('company_id', '=', company_id)]"/>
                                </div>
                                <div class="text-muted" invisible="not hotel_advance_account_id">
                                    <i class="fa fa-info-circle"/> Los anticipos se registrar치n en esta cuenta hasta que se genere la factura y se concilie el pago
                                </div>
                            </div>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>

</odoo>