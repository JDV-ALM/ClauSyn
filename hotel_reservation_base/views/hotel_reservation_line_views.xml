<odoo>
    
    <!-- Form View -->
    <record id="view_hotel_reservation_line_form" model="ir.ui.view">
        <field name="name">hotel.reservation.line.form</field>
        <field name="model">hotel.reservation.line</field>
        <field name="arch" type="xml">
            <form string="Cargo de Reserva">
                <sheet>
                    <group>
                        <group>
                            <field name="reservation_id" readonly="1"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="product_id"/>
                            <field name="name" required="1"/>
                            <field name="is_manual" readonly="1"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="user_id" readonly="1"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="company_id" invisible="1" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="quantity"/>
                            <field name="price_unit" widget="monetary"/>
                        </group>
                        <group>
                            <field name="tax_ids" widget="many2many_tags"/>
                            <field name="price_subtotal" widget="monetary"/>
                            <field name="price_total" widget="monetary"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Tree View -->
    <record id="view_hotel_reservation_line_tree" model="ir.ui.view">
        <field name="name">hotel.reservation.line.tree</field>
        <field name="model">hotel.reservation.line</field>
        <field name="arch" type="xml">
            <tree string="Cargos de Reserva" editable="bottom">
                <field name="date"/>
                <field name="reservation_id" optional="hide"/>
                <field name="partner_id" optional="show"/>
                <field name="product_id" optional="show"/>
                <field name="name"/>
                <field name="quantity"/>
                <field name="price_unit"/>
                <field name="tax_ids" widget="many2many_tags" optional="hide"/>
                <field name="price_subtotal" sum="Subtotal"/>
                <field name="price_total" sum="Total"/>
                <field name="user_id" optional="show"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="state" widget="badge" optional="show"/>
            </tree>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="view_hotel_reservation_line_search" model="ir.ui.view">
        <field name="name">hotel.reservation.line.search</field>
        <field name="model">hotel.reservation.line</field>
        <field name="arch" type="xml">
            <search string="Buscar Cargos">
                <field name="name"/>
                <field name="reservation_id"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <separator/>
                <filter string="Hoy" name="today"
                        domain="[('date', '&gt;=', context_today().strftime('%Y-%m-%d 00:00:00')),
                                ('date', '&lt;=', context_today().strftime('%Y-%m-%d 23:59:59'))]"/>
                <filter string="Esta Semana" name="this_week"
                        domain="[('date', '&gt;=', (context_today() - relativedelta(days=context_today().weekday())).strftime('%Y-%m-%d')),
                                ('date', '&lt;=', (context_today() + relativedelta(days=6-context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <filter string="Este Mes" name="this_month"
                        domain="[('date', '&gt;=', context_today().strftime('%Y-%m-01')),
                                ('date', '&lt;', (context_today() + relativedelta(months=1)).strftime('%Y-%m-01'))]"/>
                <separator/>
                <filter string="Cargos Manuales" name="manual"
                        domain="[('is_manual', '=', True)]"/>
                <separator/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Reserva" name="group_reservation" 
                            domain="[]" context="{'group_by': 'reservation_id'}"/>
                    <filter string="Cliente" name="group_partner" 
                            domain="[]" context="{'group_by': 'partner_id'}"/>
                    <filter string="Producto" name="group_product" 
                            domain="[]" context="{'group_by': 'product_id'}"/>
                    <filter string="Fecha" name="group_date" 
                            domain="[]" context="{'group_by': 'date:day'}"/>
                    <filter string="Usuario" name="group_user" 
                            domain="[]" context="{'group_by': 'user_id'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_hotel_reservation_line" model="ir.actions.act_window">
        <field name="name">Cargos de Reserva</field>
        <field name="res_model">hotel.reservation.line</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_hotel_reservation_line_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay cargos registrados
            </p>
            <p>
                Los cargos se registran desde cada reserva.
            </p>
        </field>
    </record>
    
</odoo>