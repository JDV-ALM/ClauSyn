<odoo>
    
    <!-- Form View del Wizard -->
    <record id="hotel_payment_wizard_form_view" model="ir.ui.view">
        <field name="name">hotel.payment.wizard.form</field>
        <field name="model">hotel.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="Registrar Anticipo">
                <group>
                    <group>
                        <field name="reservation_id" invisible="1"/>
                        <field name="partner_id" readonly="1"/>
                        <field name="room_number"/>
                        <field name="reservation_currency_id" invisible="1"/>
                        <field name="balance" widget="monetary" options="{'currency_field': 'reservation_currency_id'}"/>
                    </group>
                    <group>
                        <field name="amount" widget="monetary" required="1"/>
                        <field name="currency_id" required="1"/>
                        <field name="payment_method_id" required="1" options="{'no_create': True}"/>
                        <field name="journal_id" required="1" domain="[('type', 'in', ['bank', 'cash'])]" options="{'no_create': True}"/>
                        <field name="payment_date" required="1"/>
                    </group>
                </group>
                <group>
                    <field name="reference" placeholder="Ej: Transferencia #12345"/>
                    <field name="memo" placeholder="DescripciÃ³n del anticipo"/>
                </group>
                <footer>
                    <button name="action_create_payment" 
                            string="Registrar Pago" 
                            type="object" 
                            class="btn-primary"
                            data-hotkey="q"/>
                    <button string="Cancelar" 
                            class="btn-secondary" 
                            special="cancel"
                            data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Action del Wizard -->
    <record id="action_hotel_payment_wizard" model="ir.actions.act_window">
        <field name="name">Registrar Anticipo</field>
        <field name="res_model">hotel.payment.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="hotel_payment_wizard_form_view"/>
        <field name="target">new</field>
        <field name="binding_model_id" eval="False"/>
        <field name="binding_view_types">form</field>
    </record>
    
</odoo>